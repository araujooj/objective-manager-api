// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum TodoPriority {
  HIGH
  MEDIUM
  LOW
}

enum TodoSize {
  BIG
  MEDIUM
  SMALL
}

enum TodoStatus {
  TODO
  IN_PROGRESS
  COMPLETED
  STUCK
}

enum FluxTitles {
  CLIMBING_THE_MOUNTAIN
  SLOW_BURN
  EAT_THAT_FROG
}

enum PackageFocusType {
  LIGHT
  MEDIUM
  HEAVY
}

model Inbox {
  id        String   @id @default(uuid())
  title     String
  link      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  Todo      Todo[]
  Okr       Okr[]
}

model Package {
  id        String           @id @default(uuid())
  title     String
  focusType PackageFocusType

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

model Flux {
  id          String     @id @default(uuid())
  title       FluxTitles @default(EAT_THAT_FROG)
  description String

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

// Inbox > Package > Flux > Todo

model Todo {
  id             String       @id @default(uuid())
  title          String
  priority       TodoPriority @default(HIGH)
  dueDate        DateTime     @default(now())
  necessaryHours Decimal      @db.Decimal(9, 2)
  status         TodoStatus   @default(TODO)

  inbox   Inbox  @relation(fields: [inboxId], references: [id])
  inboxId String

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

model Okr {
  id             String   @id @default(uuid())
  title          String
  startDate      DateTime @default(now())
  endDate        DateTime
  necessaryHours Int

  inbox   Inbox  @relation(fields: [inboxId], references: [id])
  inboxId String

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}
